<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".MainActivity$PlaceholderFragment">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/textView_start"
                android:text="@string/textView_start"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
        <Spinner
                android:id="@+id/spinner_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/textView_start"/>
        <EditText
                android:id="@+id/editText_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/spinner_start"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:hint="0.00"
                android:gravity="end"
                android:inputType="numberDecimal"
                />
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/textView_end"
                android:text="@string/textView_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                />
        <Spinner
                android:id="@+id/spinner_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/textView_end"/>
        <TextView
                android:id="@+id/textView_end_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:gravity="right"
                android:layout_toEndOf="@id/spinner_end"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:id="@+id/textView_variation_value"
                android:text="000.00 %"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                />
        <TextView
                android:id="@+id/textView_variation_title"
                android:text="@string/textView_variation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/textView_variation_value"
                android:layout_marginEnd="20dp"
                />
    </RelativeLayout>

    <!--
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button
                android:id="@+id/button_calculate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_calculate"
                android:layout_alignParentEnd="true"
                />
    </RelativeLayout>
    -->

</LinearLayout>
